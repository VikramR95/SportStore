@{
}

@model Product

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        @*@Model.Name
            <img src="@Url.Content($"~/images/{Model.Image}")" />*@
        @*<a asp-controller="Home" asp-action="Index">@Model.Name</a>*@
        <form id="@Model.ProductID" asp-page="/ProductInfo" method="post">
            <input type="hidden" asp-for="ProductID" />
            <input type="hidden" name="returnUrl"
                   value="@ViewContext.HttpContext.Request.Path" />
            <span class="card-text p-1">
                <button>
                    @Model.Name
                    <img src="@Url.Content($"~/images/{Model.Image}")" />
                </button>

            </span>
        </form>

        <span class="badge badge-pill badge-primary" style="float:right">
            <small>@Model.Price.ToString("c")</small>
        </span>

    </div>
    <form id="@Model.ProductID" asp-page="/Cart" method="post">
        <input type="hidden" asp-for="ProductID" />
        <input type="hidden" name="returnUrl"
               value="@ViewContext.HttpContext.Request.Path" />
        <span class="card-text p-1">
            @Model.Description
            <button type="submit"
                    class="btn btn-primary btn-cart">
                AJOUTER AU PANIER<span class="fa fa-shopping-cart"></span>
            </button>

            @*<a asp-controller="Home" asp-action="Default">Add To Cart</a*@


        </span>
    </form>
</div>

